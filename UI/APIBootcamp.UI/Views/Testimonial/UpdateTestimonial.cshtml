@model UpdateTestimonialDTO
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Update Testimonial</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <label>Customer Full Name</label>
                            <input type="text" asp-for="TestimonialFullName" class="form-control" />
                            <br />
                            <label>Customer Title</label>
                            <input type="text" asp-for="TestimonialTitle" class="form-control" />
                            <br />
                            <label>Comment</label>
                            <input type="text" asp-for="TestimonialComment" class="form-control" />
                            <br />
                            <label>Image URL</label>
                            <input type="text" asp-for="TestimonialImageURL" class="form-control" />
                            <br />
                            <button type="submit" class="btn btn-success">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>