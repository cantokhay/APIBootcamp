@model List<ResultProductWithCategoryDTO>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var i = 1;
    int startIndex = 0;
    int lenght = 10;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Product List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Product Description</th>
                                    <th scope="col">Product Price</th>
                                    <th scope="col">Product Image URL</th>
                                    <th scope="col">Category Name</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductDescription.Substring(startIndex, lenght)...</td>
                                        <td>@item.ProductPrice</td>
                                        <td>@item.ProductImageURL.Substring(startIndex, lenght)...</td>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-warning">Update</a></td>
                                    </tr>
                                    i++;
                                }

                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct/" class="btn btn-success">Add New One</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

