@model CreateProductDTO
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Create Product</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Product Name</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />
                            <label>Product Description</label>
                            <input type="text" asp-for="ProductDescription" class="form-control" />
                            <br />
                            <label>Product Price</label>
                            <input type="number" asp-for="ProductPrice" class="form-control" />
                            <br />
                            <label>Product Image URL</label>
                            <input type="text" asp-for="ProductImageURL" class="form-control" />
                            <br />
                            <label>Category</label>
                            <select asp-for="CategoryId" class="form-control">
                                <option value="">Select a Category</option>
                                @foreach (var item in ViewBag.CategoriesSelectListItems)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <br />
                            <button type="submit" class="btn btn-success">Create New One</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>