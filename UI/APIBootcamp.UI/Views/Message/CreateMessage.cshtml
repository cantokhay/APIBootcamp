@model CreateMessageDTO
@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Create Message</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Full Name</label>
                            <input type="text" asp-for="MessageFullName" class="form-control" />
                            <br />
                            <label>Email</label>
                            <input type="text" asp-for="MessageEmail" class="form-control" />
                            <br />
                            <label>Subject</label>
                            <input type="text" asp-for="MessageSubject" class="form-control" />
                            <br />
                            <label>Details</label>
                            <input type="text" asp-for="MessageDetails" class="form-control" />
                            <br />
                            <label>Sent Date</label>
                            <input type="text" disabled asp-for="SentDate" class="form-control" placeholder="dd-mm-yyyy hh:mm:sss" />
                            <br />
                            <label>Status</label>
                            <input type="text" disabled asp-for="MessageStatus" class="form-control" placeholder="Unread" />
                            <br />
                            <button type="submit" class="btn btn-success">Create New One</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

