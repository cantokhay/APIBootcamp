@model UpdateContactDTO
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Update Event</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <label>Contact Map Location</label>
                            <input type="text" asp-for="ContactMapLocation" class="form-control" />
                            <br />
                            <label>Address</label>
                            <input type="text" asp-for="ContactAddress" class="form-control" />
                            <br />
                            <label>Phone Number</label>
                            <input type="text" asp-for="ContactPhoneNumber" class="form-control" />
                            <br />
                            <label>Email</label>
                            <input type="text" asp-for="ContactEmail" class="form-control" />
                            <br />
                            <label>Open Hours</label>
                            <input type="text" asp-for="ContactOpenHours" class="form-control" />
                            <br />
                            <button type="submit" class="btn btn-success">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
