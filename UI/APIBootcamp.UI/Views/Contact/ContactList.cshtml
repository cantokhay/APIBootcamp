@model List<ResultContactDTO>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int i = 0;
    int startIndex = 0;
    int length = 3;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Contact List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Phone Number</th>
                                    <th scope="col">Open Hours</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Contact Map Location</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.ContactPhoneNumber</td>
                                        <td>@item.ContactOpenHours</td>
                                        <td>@item.ContactEmail.Substring(startIndex, length)...</td>
                                        <td>@item.ContactAddress.Substring(startIndex, length)...</td>
                                        <td>@item.ContactMapLocation.Substring(startIndex, length)...</td>
                                        <td><a href="/Contact/DeleteContact/@item.Id" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.Id" class="btn btn-warning">Update</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-success">Add New One</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>